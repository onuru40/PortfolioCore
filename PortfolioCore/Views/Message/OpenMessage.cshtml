@model Message
@{
    ViewData["Title"] = "OpenMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<input type="hidden" asp-for="MessageId" />

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Mesaj Detayı</div>
					</div>
					<div class="card-body">
						<div class="card-sub">

							Gönderen: @Model.NameSurname - Email: @Model.Email - Tarih: @Model.SendDate
							<br />
							Mesaj: @Model.MessageDetail
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
