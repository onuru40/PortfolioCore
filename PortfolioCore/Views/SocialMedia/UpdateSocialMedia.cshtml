@model SocialMedia
@{
	ViewData["Title"] = "UpdateSocialMedia";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Sosyal Medya Hesabı Güncelleme</h1>
<form method="post">
	<input type="hidden" asp-for="SocialMediaId" />
	<label>Sosyal Medya Resmi</label>
	<input type="text" class="form-control" asp-for="SocialMediaIcon" style="border:1px solid black;" />
	<br />
	<label>Sosyal Medya Url</label>
	<input type="text" class="form-control" asp-for="SocialMediaUrl" style="border:1px solid black;" />
	<br />
	<button class="btn btn-primary">Sosyal Medya Güncelle</button>
</form>

