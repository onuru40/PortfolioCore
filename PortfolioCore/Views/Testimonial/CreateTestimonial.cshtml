@model Testimonial
@{
	ViewData["Title"] = "CreateTestimonial";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Referans Ekleme</h1>
<form method="post">
	<label>Ad Soyad</label>
	<input type="text" asp-for="NameSurname" class="form-control" style="border:1px solid black;" />
	<br />
	<label>Ünvan</label>
	<input type="text" asp-for="Title" class="form-control" style="border:1px solid black;" />
	<br />
	<label>Yorum</label>
	<input type="text" asp-for="CommentDetail" class="form-control" style="border:1px solid black;" />
	<br />
	<label>Url</label>
	<input type="text" asp-for="ImageUrl" class="form-control" style="border:1px solid black;" />
	<br />
	<button class="btn btn-primary">Kaydet</button>
</form>