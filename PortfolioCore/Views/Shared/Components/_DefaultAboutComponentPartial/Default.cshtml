@model List<About>
<section id="about" class="about section">

    <!-- Section Title -->
    @foreach (var item in Model)
    {
        <div class="container section-title" data-aos="fade-up">
            <h2>Hakkımda</h2>
            <p>@item.Head</p>
        </div>

        <!-- End Section Title -->

        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row gy-4 justify-content-center">
                <div class="col-lg-4">
                    <img src="@item.ImageUrl" style="width:425px;height:425px;" class="img-fluid" alt="about-img">
                </div>
                <div class="col-lg-8 content">
                    <h2>@item.Name</h2>
                    <p class="fst-italic py-3">
                        @item.Content
                    </p>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span>@item.BirthDate.ToString("dd.MM.yyyy")</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Web Sitesi:</strong> <span>@item.Website</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@item.PhoneNumber</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@item.City</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@item.Age</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Derece:</strong> <span>@item.Degree</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@item.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@item.Freelance</span></li>
                            </ul>
                        </div>
                    </div>
                    <p class="py-3">
                        @item.Text
                    </p>
                </div>
            </div>

        </div>
    }
</section>