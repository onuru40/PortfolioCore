@model List<About>
@{
	ViewData["Title"] = "AboutList";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Hakkımda</h1>
<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Ünvan</th>
		<th>Açıklama</th>
		<th>Alt Açıklama</th>
		<th>Yaş</th>
		<th>Telefon Numarası</th>
		<th>Email</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.AboutId</td>
			<td>@item.Title</td>
			<td>@item.Description</td>
			<td>@item.SubDescription</td>
			<td>@item.Age</td>
			<td>@item.PhoneNumber</td>
			<td>@item.Email</td>
			<td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
			<td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-info">Güncelle</a></td>
		</tr>
	}
</table>
<a href="/About/CreateAbout/" class="btn btn-primary">Yeni Ekle</a>

